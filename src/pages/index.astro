  <style>
    main {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .noise {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      min-height: 100vh;
      overflow: hidden;
      pointer-events: none;
      mix-blend-mode: overlay;
      background-repeat: repeat;
      z-index: 3;
      opacity: 0.9;
    }

    header {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      flex-direction: column;
      width: 100%;
     
    }

    .header-container {
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-blend-mode: multiply;
    }

    .text-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      text-wrap: balance;
      width: 80%;
    }

    .subtitle {
      font-size: 0.9rem;
      margin-top: 0;
      font-weight: 300;
      letter-spacing: 0.5rem;
      font-weight: 700;
      color: var(--color-accent);
      text-transform: uppercase;
    }

    .spotify-desktop {
      padding: 0, 0.3rem;
      border-radius: 0.5rem;
      margin-top: 2rem;
      width: 90%;
      max-width: 700px;
      justify-content: center;
      align-items: center;
      display: none;
    }
    .spotify-mobile {
      padding: 0, 0.3rem;
      border-radius: 0.5rem;
      margin-top: 2rem;
      width: 100%;

      justify-content: center;
      align-items: center;
      display: flex;
    }

    .social-media > ul {
      margin-top: 10%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .social-media > ul > li {
      margin: 0 0.5rem;
      width: 2rem;
      height: 2rem;
    }

    .social-media > ul > li > a > svg {
      width: 100%;
      height: 100%;
      fill: var(--color-accent);
    }

    svg:hover {
      transform: scale(1.2);
      transition: transform 0.3s ease-in-out;

    }

    @media (min-width: 768px) {
      .subtitle {
        font-size: 1.2rem;
      }

     

 
  

    @media (min-width: 1024px) {
      .subtitle {
        font-size: 0.9rem;
      }

      .spotify-desktop {
        display: flex;
      }
      .spotify-mobile {
        display: none;
      }
    }
  </style>

  <script>
    // This is an example of a client-side script.
