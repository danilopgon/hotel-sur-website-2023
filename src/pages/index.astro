---
import Layout from "../layouts/Layout.astro";

import { getImage } from "astro:assets";
import backgroundImage from "../images/fondo-escritorio.jpg";
import noise from "../images/ruido.gif";

const optimizedBackground = await getImage({
  src: backgroundImage,
  format: "webp",
});

const optimizedNoise = await getImage({
  src: noise,
  format: "gif",
});
