---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hotel Sur">
  <main>
    <header>
      <div class="text-container">
        <h1>Hotel Sur</h1>
        <p class="subtitle">Â¿Has vuelto a pensar en volar?</p>
      </div>
    </header>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
  }

  header {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    flex-direction: column;
    width: 100%;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    text-wrap: balance;
    width: 80%;
  }

  .subtitle {
    font-size: 0.9rem;
    margin-top: 0;
    font-weight: 300;
    letter-spacing: 0.5rem;
    color: var(--color-accent);
    text-transform: uppercase;
  }
</style>

<script>
  // This is an example of a client-side script.
  // See https://docs.astro.build/core-concepts/scripts for more information.
  console.log("Hello from Astro!");

  // This is an example of a server-side script.
  // See https://docs.astro.build/core-concepts/scripts for more information.
  export const serverSideScript = () => {
    console.log("Hello from the server!");
  };

  const title = document.querySelector("h1");

  if (!title) {
    throw new Error("No title found!");
  }

  title.onclick = () => {
    serverSideScript();
  };
</script>
